<UserControl x:Class="Denna.Office.Common.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Denna.Office.Common.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBox Height="35" x:Name="usr" TextWrapping="Wrap" Text="username" />
        <PasswordBox Height="35" x:Name="pass" />
        <Button x:Name="login" Content="login" Click="login_Click"/>

    </StackPanel>
</UserControl>
